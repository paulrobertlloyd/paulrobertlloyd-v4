{
  "private": true,
  "name": "paulrobertlloyd.com",
  "version": "4.0.0",
  "description": "The personal website of Paul Robert Lloyd",
  "keywords": [
    "indieweb",
    "personal-website"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "email": "reply@paulrobertlloyd.com",
    "url": "https://paulrobertlloyd.com"
  },
  "homepage": "https://github.com/paulrobertlloyd/paulrobertlloyd-v4#readme",
  "repository": "github:paulrobertlloyd/paulrobertlloyd-v4",
  "bugs": "https://github.com/paulrobertlloyd/paulrobertlloyd-v4/issues",
  "scripts": {
    "build": "eleventy --quiet",
    "start": "eleventy --incremental --serve",
    "lint:markdown": "markdownlint-cli2 'src/**/*.markdown'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint 'src/**/*.css'",
    "lint": "npm run lint:markdown && npm run lint:scripts && npm run lint:styles",
    "debug": "DEBUG=* npx eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@11tyrocks/eleventy-plugin-lightningcss": "^1.1.1",
    "@paulrobertlloyd/markdown-it-rules": "github:paulrobertlloyd/markdown-it-rules",
    "color": "^4.0.1",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.0.0",
    "geolib": "^3.3.1",
    "ical-js-parser": "^0.7.4",
    "lightningcss": "^1.19.0",
    "markdown-it": "^13.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.3.1",
    "markdown-it-attribution": "^0.1.4",
    "markdown-it-attrs": "^4.1.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-handle": "^0.1.0",
    "markdown-it-image-figures": "^2.0.0",
    "mime": "^3.0.0",
    "netlify-plugin-cache": "^1.0.3",
    "netlify-plugin-webmentions": "^1.1.1",
    "newbase60": "^1.3.1",
    "string-to-color": "^2.2.2"
  },
  "devDependencies": {
    "eslint-plugin-jsdoc": "^40.0.0",
    "markdownlint-cli2": "^0.7.1",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-order": "^6.0.0",
    "xo": "^0.54.0"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "browserslist": [
    ">= 0.5%"
  ],
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "envs": "browser",
    "ignores": [
      "www/**"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ],
      "unicorn/prefer-module": 0
    }
  }
}
