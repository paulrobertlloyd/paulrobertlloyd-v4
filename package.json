{
  "private": true,
  "name": "paulrobertlloyd.com",
  "version": "4.0.0",
  "description": "The personal website of Paul Robert Lloyd",
  "keywords": [
    "indieweb",
    "personal-website"
  ],
  "author": "Paul Robert Lloyd",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/paulrobertlloyd/paulrobertlloyd-v4#readme",
  "repository": "github:paulrobertlloyd/paulrobertlloyd-v4",
  "bugs": "https://github.com/paulrobertlloyd/paulrobertlloyd-v4/issues",
  "scripts": {
    "prebuild": "rm -rf www && mkdir -p www/assets",
    "build": "eleventy --quiet",
    "deploy": "npm run build",
    "postdeploy": "webmention www/feed.xml --limit 1 --send",
    "watch": "eleventy --quiet --incremental --serve",
    "lint:markdown": "markdownlint 'src/**/*.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint 'src/**/*.css'",
    "lint": "npm-run-all lint:*",
    "debug": "DEBUG=* npx eleventy"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "github:11ty/eleventy",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "@remy/webmention": "^1.4.5",
    "color": "^4.0.1",
    "cssnano": "^5.0.8",
    "date-fns-tz": "^1.1.6",
    "dotenv": "^10.0.0",
    "eleventy-plugin-images-responsiver": "^1.9.1",
    "geolib": "^3.3.1",
    "ics": "^2.31.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.2.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.3.1",
    "markdown-it-attribution": "^0.1.4",
    "markdown-it-attrs": "^4.1.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-image-figures": "^2.0.0",
    "markdown-it-mentions": "^1.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "mime-type-check": "^2.0.0",
    "netlify-plugin-11ty": "^1.1.0",
    "newbase60": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "pluscodes": "^2.5.1",
    "postcss": "^8.3.11",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-selectors": "^6.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-logical": "^5.0.0",
    "postcss-media-minmax": "^5.0.0",
    "sanitize-html": "^2.5.2",
    "string-to-color": "^2.2.2",
    "turndown": "^7.1.1"
  },
  "devDependencies": {
    "eslint-plugin-jsdoc": "^37.1.0",
    "markdownlint-cli": "^0.30.0",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "xo": "^0.47.0"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "envs": "browser",
    "ignores": [
      "www/**",
      "!.eleventy.js"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "properties": "never"
        }
      ],
      "node/prefer-global/process": [
        "error",
        "always"
      ],
      "unicorn/prefer-module": 0
    }
  }
}
