<article class="item{% if item._templateContent == "" %} item--no-content{% endif %} | h-entry">
  <div class="item__main s-linear | e-content p-name">
    {{ item._templateContent -}}
    {% if item.data.photo %}
      {%- if item.data.photo.size > 1 %}{% assign ratio = 1 %}{% endif -%}
      {%- render 'photos' with item.data.photo
        imageClass: 'u-photo'
        imageRatio: ratio | default: false
      -%}
    {% endif %}
  </div>

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url }}">
      <time class="dt-published" datetime="{{ item.date | date: dates.iso }}">{{ item.date | date: dates.date_short }} {{ item.date | date: dates.time }}</time>
    </a>
  </footer>
</article>
