---
permalink: /archive/search.json
---
[{% for item in collections.post %}
{%- capture title %}{% if item.data.title != '' %}{{ item.data.title | markdownify: 'inline' }}{% else %}{{ item.data.date | date: dates.date_short }}{% endif %}{% endcapture -%}
  {
    "title": {{ title | jsonify }},
    "layout": {{ item.data.layout | capitalize | jsonify }},
    "content": {{ item.templateContent | tokenize | jsonify }},
    "url": {{ item.url | pretty | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}]
