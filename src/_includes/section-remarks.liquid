<section class="section" aria-labelledby="{{ section_id }}">
  <div class="section__container">
    <header class="section__header">
      <h2 class="section__title" id="{{ section_id }}">{{ section_title }}</h2>
    </header>

    <details class="section__main">
      <summary>
        {% assign facepile_type = section_title | downcase %}
        {% include 'facepile' with items %}
      </summary>

      <div style="--grid-size: {{ items_size | default: '100%' }}">
      {% for item in items %}
        {% include 'item/remark' %}
      {% endfor %}
      </div>
    </details>
  </div>
</section>
