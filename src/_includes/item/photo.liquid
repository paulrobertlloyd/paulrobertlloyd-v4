<article class="item item--{{ item_modifier | default: 'block'}} | h-entry" data-type="photo">
  <div class="item__main s-linear | e-content p-name">
    {{ item.templateContent -}}
    {%- if item.data.photo.size > 1 %}{% assign image_ratio = 1.0 %}{% endif -%}
    {%- include 'photos'
      photo: item.data.photo
      image_class: 'u-photo'
    -%}
  </div>

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url | prepend: app.url | pretty }}">
      <time class="dt-published" datetime="{{ item.data.date | date: dates.iso }}" aria-label="{{ item.data.date | date: dates.date_long }}">
        <span>{{ item.data.date | date: dates.date_short }}</span>
        <span>{{ item.data.date | date: dates.time }}</span>
      </time>
    </a>
  </footer>
</article>
