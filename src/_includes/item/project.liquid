<article class="item item--{{ item_modifier | default: 'block'}} | h-entry" data-type="project">
  {%- include 'image' with item.data.image
    image_class: 'item__image'
    image_preset: 'thumbnail'
  -%}

  <header class="item__header">
    <h3 class="item__title | p-name">
      <a href="{{ item.url | permalink }}">{{ item.data.title | markdownify_inline }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdownify }}
  </div>
{%- endif -%}
</article>
