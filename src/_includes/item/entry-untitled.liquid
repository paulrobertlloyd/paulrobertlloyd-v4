<article class="item item--{{ modifier | default: 'block' }} | h-entry">
  <div class="item__main s-linear | e-content p-name">
    {{ item.templateContent -}}
    {% if item.data.photo %}
      {%- if item.data.photo.size > 1 %}{% assign image_ratio = 1.0 %}{% endif -%}
      {%- render 'photos' with item.data.photo
        image_class: 'u-photo'
        image_ratio: image_ratio | default: false
      -%}
    {% endif %}
  </div>

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url }}" aria-label="{{ item.data.date | date: dates.datetime_full }}">
      <time class="dt-published" datetime="{{ item.data.date | date: dates.iso }}">{{ item.data.date | date: dates.date_short }} {{ item.data.date | date: dates.time }}</time>
    </a>
  </footer>
</article>
