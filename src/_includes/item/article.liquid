<article class="item item--{{ item_modifier | default: 'block'}} | h-entry" data-type="article">
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a href="{{ item.url | permalink }}">{{ item.data.title | markdownify: 'inline' }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdownify }}
  </div>
{%- endif -%}

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url | permalink }}" tabindex="-1">
      <time class="dt-published" datetime="{{ item.data.date | date: dates.iso }}" aria-label="{{ item.data.date | date: dates.date_long }}">{{ item.data.date | date: dates.date_short }}</time>
    </a>
  </footer>
</article>
