<article class="item item--{{ modifier | default: 'block'}} | h-entry" data-type="article">
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdown }}
  </div>
{%- endif -%}

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url }}" tabindex="-1" aria-label="{{ item.data.date | date: dates.date_long }}">
      <time class="dt-published" datetime="{{ item.data.date | date: dates.iso }}">{{ item.data.date | date: dates.date_short }}</time>
    </a>
  </footer>
</article>
