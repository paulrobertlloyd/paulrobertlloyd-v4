<section class="item item--{{ item_modifier | default: 'block'}} | h-entry" data-type="skill">
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a href="{{ item.url | pretty }}">{{ item.data.title | markdownify: 'inline' }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdownify }}
  </div>
{%- endif -%}
</section>
