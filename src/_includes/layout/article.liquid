{%- capture permalink -%}{{ page.url | permalink | prepend: app.url }}{%- endcapture -%}
{%- assign webmentions = webmentions.children | webmentions_for_url: permalink -%}
{%- layout 'layout/default' -%}
{%- block 'main' -%}
  {%- include 'footer' -%}
  {%- include 'header' summary: false -%}
  {%- include 'content' -%}

  {%- if webmentions.size > 0 -%}
    {%- include 'section-webmentions'
      items: webmentions
      item_modifier: 'inline'
    -%}
  {%- endif -%}

  {%- if discussion -%}
    {%- capture remarks_link %}[View remarks on this entry]({{ page.url | permalink }}/discussion){% endcapture -%}
    {%- include 'section'
      section_id: 'dicussion'
      section_title: 'Discussion'
      section_content: remarks_link
    -%}
    {%- if discussion == 'open' -%}
      {%- include 'form/remark' -%}
    {%- endif -%}
  {%- endif -%}

  {%- if series -%}
    {%- assign posts = collections.all | select: 'data.series',series | reject: 'url',page.url -%}
    {%- include 'section'
      section_id: 'related'
      section_title: 'Also in this series'
      section_scrollable: true
      items: posts
      items_size: '16rem'
      items_component: 'card'
      card_image_color: true
    -%}
  {%- endif -%}
{%- endblock -%}
