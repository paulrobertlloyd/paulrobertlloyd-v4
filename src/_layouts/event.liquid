{%- layout 'default' -%}
{%- block 'main' -%}
  {%- include 'footer' -%}
  {%- include 'header' -%}
  {%- capture content -%}
    {%- include 'event' -%}
    {%- if url contains 'imdb.com' -%}
      {%- assign imdb_id = url | remove: 'https://www.imdb.com/title/' | remove: '/' -%}
      <img src="https://img.omdbapi.com/?apikey={{ app.token.ombdapi }}&i={{ imdb_id }}&h=480" class="align-start" width="240" style="--inline-size: 20%">
    {%- endif -%}
    {{ content }}
  {%- endcapture -%}
  {%- include 'content' -%}

  {%- if collection -%}
    {% for this_collection in collection %}
      {%- for item in collections.collection -%}
        {%- if this_collection == item.fileSlug -%}
          {%- capture section_title %}Other events in the <a href="{{ item.url }}">{{ item.data.title }}</a> series{%- endcapture -%}
        {%- endif -%}
      {%- endfor -%}

      {%- assign events = collections.event | includes: 'data.collection',this_collection | reject: 'url',page.url -%}
      {%- include 'section'
        section_id: 'related'
        items: events
        item_modifier: 'inline'
      -%}
    {% endfor %}
  {%- endif -%}
{%- endblock -%}
