{%- assign comments = collections.comments | where: 'data.article_id',id | first -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: date
    location: location
    canonical: canonical
    sources: sources
  -%}
  {%- render 'header'
    title: title
    summary: false
    vocabulary: vocabulary
  -%}
  {%- render 'content' with content -%}
  {%- render 'meta'
    categories: category
    comments: comments
    syndication: syndication
  -%}
  {%- for this in collection -%}
    {%- assign related = collections.collection | where: 'fileSlug',this | first -%}
    {%- capture sectionTitle %}More from the <a href="{{ related.url }}">{{ related.data.title }}</a> collection{%- endcapture -%}
    {%- assign articles = collections.article | includes: 'data.collection', this | excludes: 'url',page.url | reverse -%}
    {%- render 'section' with articles
      id: 'related'
      title: sectionTitle
      scrollable: true
      itemsComponent: 'card'
      itemsGridSize: '15rem'
      itemsLimit: 3
    -%}
  {%- endfor -%}
{%- endblock -%}
