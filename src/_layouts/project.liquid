{%- layout 'default' -%}
{%- block 'main' -%}
  {%- include 'header' -%}
  {%- include 'content' -%}
  {%- assign tag = page.fileSlug | prepend: 'project:' -%}
  {%- assign items = collections.article | includes: 'data.tags',tag -%}
  {%- if items.size > 0 %}
    {%- include 'section'
      section_id: 'related'
      section_title: 'Related articles'
      items: items
      items_size: '16rem'
    -%}
  {%- endif -%}
{%- endblock -%}
