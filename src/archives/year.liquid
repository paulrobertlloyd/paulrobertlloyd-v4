---
layout: index
title: Archive
pagination:
  data: years
  size: 1
  alias: page
  addAllPagesToCollections: true
permalink: "{{ page.url }}"
changefreq: monthly
priority: 0.2
eleventyComputed:
  pageTitle: "{{ page.data.introduction }} Â· {{ app.title }}"
  introduction: "{{ page.data.introduction }}"
---
{%- assign archive = months | includes: 'date',page.fileSlug -%}
{%- render 'section-archives' with archive
  id: 'browse',
  title: 'Browse by month'
-%}
{%- assign featured = collections.article | includes: 'data.tags','featured' | includes: 'data.date',page.fileSlug -%}
{%- render 'section' with featured
  id: 'featured'
  title: 'Select articles from this year'
  scrollable: true
  itemsLimit: 3
  itemsGridSize: '15rem'
  itemsComponent: 'card'
-%}
