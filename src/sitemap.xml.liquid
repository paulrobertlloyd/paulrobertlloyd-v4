---
eleventyExcludeFromCollections: true
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
{%- assign items = collections.all | sort_by: 'data.priority' | reverse -%}
{%- for item in items -%}
  <url>
    <loc>{{ item.data.bookmark }}</loc>
    <lastmod>{{ item.date | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>{{ item.data.changefreq }}</changefreq>
    <priority>{{ item.data.priority }}</priority>
    {%- if item.data.image -%}
    <image:image>
      <image:loc>https://res.cloudinary.com/paulrobertlloyd/image/fetch/c_fill%2Cf_auto%2Cq_auto%2Cw_1200%2Ch_630/{{ app.url }}{{ item.data.image }}</image:loc>
    </image:image>
    {%- endif -%}
  </url>
{%- endfor -%}
</urlset>
